{{#each errors}}
<div class="alert alert-danger lead" role="alert">
    {{text}}
</div>
{{else}}
{{/each}}
<div class="row justify-content-center">
    <div class="col-8 mb-2">
        <div class="card card-body">
            <h3>Edit video ideas</h3>
            <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" value="{{idea.title}}">
                </div>
                <div class="form-group">
                    <label for="details">Details</label>
                    <textarea class="form-control" name="details" id="details" placeholder="Enter details">{{idea.details}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block
            ">Submit</button>
            </form>
        </div>
    </div>
</div>